{
  "name": "meshshare",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node src/server/server.js",
    "dev:all": "concurrently \"npm run dev:server1\" \"npm run dev:server2\" \"npm run dev:frontend1\" \"npm run dev:frontend2\"",
    "dev:frontend1": "vite --mode server1 --port 5173",
    "dev:frontend2": "vite --mode server2 --port 5174",
    "dev:server1": "cross-env PORT=3000 SERVER_URL=http://localhost:3000 node src/server/server.js",
    "dev:server2": "cross-env PORT=3001 SERVER_URL=http://localhost:3001 KNOWN_SERVERS=http://localhost:3000 node src/server/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "vite": "^5.4.10"
  }
}
